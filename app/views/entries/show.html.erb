<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <h2><%= @entry.creation_date %></h2>
    <br>
    <% @entry.content.each_line do |l| %>
    <p>
      <%= l %>
    </p>
    <% end %>
    <hr>
    <%= link_to 'Edit entry', edit_entry_path(@entry), class: 'btn btn-default' %>
    <%= link_to 'Delete entry', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-default' %>
  </div>
</div>
