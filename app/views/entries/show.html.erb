<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <h2><%= @entry.creation_date %></h2>
    <% @entry.content.each_line do |l| %>
    <p>
      <%= l %>
    </p>
    <% end %>
    <%= link_to 'Edit', edit_entry_path(@entry) %>
    <%= link_to 'delete', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
